{
    "name": "tharos",
    "displayName": "Tharos",
    "description": "Tharos: Intelligent, Unbreakable Code Policy Enforcement",
    "version": "1.0.1",
    "icon": "images/icon.png",
    "publisher": "chinonsochikelue",
    "repository": {
        "type": "git",
        "url": "https://github.com/chinonsochikelue/tharos"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Linters",
        "AI",
        "Other",
        "Programming Languages",
        "Testing",
        "Debuggers",
        "Extension Packs",
        "Formatters",
        "Keymaps",
        "Language Packs",
        "Machine Learning",
        "Notebooks",
        "Visualization"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python",
        "onLanguage:go"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "tharos.scanFile",
                "title": "Tharos: Scan Current File"
            }
        ],
        "configuration": {
            "title": "Tharos",
            "properties": {
                "tharos.strictMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable strict mode (fail on any finding)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "^16.11.7",
        "typescript": "^4.9.3"
    }
}