{
    "name": "tharos",
    "displayName": "Tharos Security & Quality",
    "description": "AI-powered semantic code analysis with real-time security insights",
    "version": "0.1.0",
    "publisher": "chinonsochikelue",
    "icon": "media/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/chinonsochikelue/tharos"
    },
    "engines": {
        "vscode": "^1.108.0"
    },
    "categories": [
        "Linters",
        "Programming Languages",
        "Testing"
    ],
    "keywords": [
        "security",
        "linter",
        "ai",
        "code-quality",
        "static-analysis"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:javascript",
        "onLanguage:typescriptreact",
        "onLanguage:javascriptreact",
        "onLanguage:python",
        "onLanguage:go",
        "onLanguage:rust",
        "onLanguage:java"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Tharos",
            "properties": {
                "tharos.enableAI": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable AI-powered semantic analysis"
                },
                "tharos.corePath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to tharos-core executable (auto-detected if empty)"
                },
                "tharos.severity": {
                    "type": "string",
                    "enum": [
                        "block",
                        "warning",
                        "info"
                    ],
                    "default": "warning",
                    "description": "Minimum severity level to show diagnostics"
                }
            }
        },
        "commands": [
            {
                "command": "tharos.analyzeFile",
                "title": "Tharos: Analyze Current File"
            },
            {
                "command": "tharos.analyzeWorkspace",
                "title": "Tharos: Analyze Entire Workspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^20.19.30",
        "@types/vscode": "^1.108.1",
        "typescript": "^5.9.3"
    },
    "author": "",
    "license": "ISC",
    "type": "commonjs"
}